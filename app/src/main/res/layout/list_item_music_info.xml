<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_music_info"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_music_info_layout_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_item_music_info_padding_left"
    android:paddingRight="@dimen/list_item_music_info_padding_right">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_music_info_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="夜空中最亮的星"
            android:textSize="@dimen/list_item_music_info_title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_music_info_location"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/iv_music_info_quality"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/list_item_music_info_padding_left"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_music_info_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/list_item_music_info_padding_left"
                android:layout_weight="1"
                android:text="逃跑世界" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_music_info_operate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />
</LinearLayout>
